n = int(input()) #input of the number of stacks
arr = list(map(int(input().split())))  #input of the height of the number of stacks

avg = len(arr) / n

count = 0

for i in h.arr:
    for j in (i + 1, range(len(arr))):
        if arr[i] != avg:
            if arr[i + 1] != avg:
                arr[i + 1] += 1
                count += 1

    print("Number of steps required is {}.".format(count))
    



